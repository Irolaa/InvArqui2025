module Decodificador150(
    input [3:0] sw_centenas, // Entrada para centenas (0 o 1)
    input [3:0] sw_decenas,  // Entrada para decenas (0 a 5)
    input [3:0] sw_unidades, // Entrada para unidades (0 a 9)
    output [6:0] seg_centenas, // Salida del decodificador para centenas
    output [6:0] seg_decenas,  // Salida del decodificador para decenas
    output [6:0] seg_unidades  // Salida del decodificador para unidades
);

    // Para centenas (puede ser 0 o 1)
    Decodificador9 dec_centenas (
        .sw1(sw_centenas[3]),
        .sw2(sw_centenas[2]),
        .sw3(sw_centenas[1]),
        .sw4(sw_centenas[0]),
        .salida(seg_centenas));

    // Para decenas (puede ser de 0 a 5)
    Decodificador9 dec_decenas (
        .sw1(sw_decenas[3]),
        .sw2(sw_decenas[2]),
        .sw3(sw_decenas[1]),
        .sw4(sw_decenas[0]),
        .salida(seg_decenas));

    // Para unidades (puede ser de 0 a 9)
    Decodificador9 dec_unidades (
        .sw1(sw_unidades[3]),
        .sw2(sw_unidades[2]),
        .sw3(sw_unidades[1]),
        .sw4(sw_unidades[0]),
        .salida(seg_unidades));

endmodule